@model ModelEF.Model.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .actioncreate {
        margin-bottom: 10px;
    }

        .actioncreate a {
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
            background: #4e73df;
            color: #fff;
            text-decoration: none;
            transition: .6s;
        }

            .actioncreate a:hover {
                background: blue;
                transition: .6s;
            }

    .inputuao input {
        height: calc(1.5em + .75rem + 2px);
        padding: .375rem .75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #6e707e;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #d1d3e2;
        border-radius: .35rem;
    }

        .inputuao input:focus {
            outline: none;
        }

    .btnclick input {
        transition: .6s;
    }

        .btnclick input:hover {
            background: blue;
            transition: .6s;
            color: #fff;
        }
</style>
@using (Html.BeginForm("Edit", "Category", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sửa Thể Loại</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group inputuao">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="offset-3 btnclick">
            <input style="border: 1px solid;" type="submit" value="Cập nhật" class="btn btn-default" />
        </div>
    </div>

}

<div class="actioncreate">
    @Html.ActionLink("Trở Lại", "Index")
</div>

