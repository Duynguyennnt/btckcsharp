    var listallproductssale = (List<ModelEF.Model.Product>)ViewBag.ProductAllsale;
    var listallproductslimit = (List<ModelEF.Model.Product>)ViewBag.Productlimit;
}
<!-- Start Feature Product -->
<section class="categories-slider-area bg__white">
    <div class="container">
        <div class="row">
            <!-- Start Left Feature -->
            <div class="col-md-9 col-lg-9 col-sm-8 col-xs-12 float-left-style">
                <!-- Start Slider Area -->
                <div class="slider__container slider--one">
                    <div class="slider__activation__wrap owl-carousel owl-theme">
                        <!-- Start Single Slide -->
                        <div class="slide slider__full--screen slider-height-inherit slider-text-right" style="background: rgba(0, 0, 0, 0) url(/Assets/Client/images/nhung-cuon-sach-van-hoc-hay.jpg) no-repeat scroll center center / cover ;">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-10 col-lg-8 col-md-offset-2 col-lg-offset-4 col-sm-12 col-xs-12">
                                        <div class="slider__inner">
                                            <h1>Sản Phẩm Mới <span class="text--theme">Sưu Tầm</span></h1>
                                            <div class="slider__btn">
                                                <a class="htc__btn" href="cart.html">Mua ngay</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Slide -->
                        <!-- Start Single Slide -->
                        <div class="slide slider__full--screen slider-height-inherit slider-text-left" style="background: rgba(0, 0, 0, 0) url(/Assets/Client/images/banner1.jpg) no-repeat scroll center center / cover ;">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-8 col-lg-8 col-sm-12 col-xs-12">
                                        <div class="slider__inner">
                                            <h1>Sản Phẩm Mới <span class="text--theme">Sưu Tầm</span></h1>
                                            <div class="slider__btn">
                                                <a class="htc__btn" href="#">Mua ngay</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Slide -->
                    </div>
                </div>
                <!-- Start Slider Area -->
            </div>
            @{Html.RenderAction("Category", "Product");}
            <!-- End Left Feature -->
        </div>
    </div>
</section>
<!-- End Feature Product -->
<div class="only-banner ptb--20 bg__white">
</div>
<!-- Start Our Product Area -->
<section class="htc__product__area bg__white">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="product-categories-all">
                    <div class="product-categories-title">
                        <h3>Sản Phẩm mới nhất</h3>
                    </div>
                    <div class="product-categories-menu">
                        <ul>
                            @foreach (var items in listnewproducts)
                            {
                                <li><a href="#">@items.Name</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="product-style-tab">
                    <div class="product-tab-list">
                        <!-- Nav tabs -->
                        <ul class="tab-style" role="tablist">
                            @{
                                int tmp = 1;
                            }
                            @foreach (var item in listnewcategory)
                            {
                                if (tmp == 1)
                                {
                                    <li class="active">
                                        <a href="#home_@item.ID" data-toggle="tab">
                                            <div class="tab-menu-text">
                                                <h4>@item.Name </h4>
                                            </div>
                                        </a>
                                    </li>
                                    tmp += 1;
                                }
                                else
                                {
                                    <li>
                                        <a href="#home_@item.ID" data-toggle="tab">
                                            <div class="tab-menu-text">
                                                <h4>@item.Name</h4>
                                            </div>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                    <div class="tab-content another-product-style jump">
                        @{
                            int tmps = 1;
                        }
                        @foreach (var item in listnewcategory)
                        {
                            if (tmps == 1)
                            {
                                <div class="tab-pane active" id="home_@item.ID">
                                    <div class="row">
                                        <div class="product-slider-active owl-carousel">
                                            @foreach (var list in listallproducts)
                                            {
                                                if (list.IDCategory == item.ID)
                                                {
                                                    <div class="col-md-4 single__pro col-lg-4 cat--1 col-sm-4 col-xs-12">
                                                        <div class="product">
                                                            <div class="product__inner">
                                                                <div class="pro__thumb">
                                                                    <a href="#">
                                                                        <img style="max-height: 350px; min-height: 350px;" 
                                                       src="~/Assets/Admin/Images/@list.Image" alt="product images">
                                                                    </a>
                                                                </div>
                                                                <div class="product__hover__info">
                                                                    <ul class="product__action">
                                                                        <li><a class="quick-view modal-view detail-link" 
                                                   href="/Product/Detail/@list.ID"><span class="ti-plus"></span></a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                            <div class="product__details">
                                                                <h2><a href="product-details.html">@list.Name</a></h2>
                                                                <ul class="product__price">
                                                                    <li class="new__price">@string.Format("{0:0,0.}", @list.UnitCost) &nbsp;VND</li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }

                                            }
                                        </div>
                                    </div>
                                </div>
                                tmps += 1;
                            }
                            else
                            {
                                <div class="tab-pane" id="home_@item.ID">
                                    <div class="row">
                                        <div class="product-slider-active owl-carousel">
                                            @foreach (var list in listallproducts)
                                            {
                                                if (list.IDCategory == item.ID)
                                                {
                                                    <div class="col-md-4 single__pro col-lg-4 cat--1 col-sm-4 col-xs-12">
                                                        <div class="product">
                                                            <div class="product__inner">
                                                                <div class="pro__thumb">
                                                                    <a href="#">
                                                                        <img style="max-height: 350px; min-height: 350px;" src="~/Assets/Admin/Images/@list.Image" alt="product images">
                                                                    </a>
                                                                </div>
                                                                <div class="product__hover__info">
                                                                    <ul class="product__action">
                                                                        <li><a class="quick-view modal-view detail-link" href="/Product/Detail/@list.ID"><span class="ti-plus"></span></a></li>
                                                                    </ul>
                                                                </div>
                                                            </div>
                                                            <div class="product__details">
                                                                <h2><a href="product-details.html">@list.Name</a></h2>
                                                                <ul class="product__price">
                                                                    <li class="new__price">@string.Format("{0:0,0.}", @list.UnitCost) &nbsp;VND</li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }

                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Our Product Area -->
<div class="only-banner ptb--100 bg__white">
    <div class="container">
        <div class="only-banner-img">
